//Just a dev thing so I can quickly check how many dialogues he has
On_getaistateex : all
{
    _graph = AI_Graphs[reference0]
    if _graph != ""
    {
        _items = SPLIT(_graph,",")
        for _i = 0; _i < ARRAYSIZE(_items); _i++
        {
            if _i > 0; ","
            OUTPUTNUM("%(_items[_i])")
        }
        C_BYTE1
        for _i = 0; _i < ARRAYSIZE(_items); _i++
        {
            if _i > 0; ","
            "%(_items[_i])"
        }
    }
}

