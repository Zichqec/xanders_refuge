//Takes an array of alternating names and urls, and formats them for use with the right click menu
FormatLinks : all
{
	for _i = 0; _i < ARRAYSIZE(_argv); _i++
	{
		_argv[_i] //Add the link/title
		//Alternate between adding %(CHR(1)) or %(CHR(2))
		if _i % 2 == 1; "%(CHR(2))"
		else; "%(CHR(1))"
	}
}

